<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/rounded_dialog">

    <TextView
        android:id="@+id/messageTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="برای بازیابی رمز عبور کافیست نام کاربری خود را در قسمت زیر وارد نمایید تا لینک بازیابی برای شما ایمیل شود."/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/resetUsernameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="نام کاربری"
        android:layout_marginTop="8dp"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/getResetLink"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="8dp"
        android:gravity="center"
        android:background="@drawable/round_ee_15"
        android:text="دریافت لینک بازیابی"
        android:textSize="14sp"
        android:textColor="@color/colorWhite"/>

</LinearLayout>